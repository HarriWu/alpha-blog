
<% if @article.errors.any? %>
<% @article.errors.full_messages.each do |msg| %>
<ul>
  <li> <%= msg %>
  </li>
<% end %>
</ul>

<% end %>

<%= form_for @article do |h| %>
<p>
  <%= h.label :title %><br/>
  <%= h.text_field :title %>
</p>
<p>
  <%= h.label :description %><br/>
  <%= h.text_area :description %>
</p>
<p>
  <%= h.submit %>
</p>
<% end %>

<%= link_to "Back to articles listing",articles_path %>