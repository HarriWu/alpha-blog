<%=render 'shared/errors', obj: @user %>

<div class= 'row'>
  <div class = 'col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |h| %>
      <div class='form-group'>
        <div class='control-label col-sm-2'>    
          <%= h.label :username %>
        </div>
        <div class='col-sm-8'>
          <%= h.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true  %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>    
          <%= h.label :email %>
        </div>
        <div class='col-sm-8'>
          <%= h.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>    
          <%= h.label :password %>
        </div>
        <div class='col-sm-8'>
          <%= h.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= h.submit(@user.new_record? ? "Sign up" : "Update Account" , class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
  <div class='col-xs-4 col-xs-offset-4'>
   [ <%= link_to "Cancel Request and Return to articles listing",articles_path %> ]
  </div>
  </div>
</div>
