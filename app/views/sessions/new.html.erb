<h1 align= "center">
  Log in 
</h1>

 <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |h| %>
     
      <div class='form-group'>
        <div class='control-label col-sm-2'>    
          <%= h.label :email %>
        </div>
        <div class='col-sm-8'>
          <%= h.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-2'>    
          <%= h.label :password %>
        </div>
        <div class='col-sm-8'>
          <%= h.password_field :password, class: "form-control", placeholder: "Enter password", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <%= h.submit "Log in" , class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  <div class='col-xs-4 col-xs-offset-4'>
   [ <%= link_to "Cancel Request and Return to articles listing",articles_path %> ]
  </div>